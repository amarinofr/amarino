extends ../base.pug

block variables
  - var template = 'home'

block content
  .home
    include ../components/intro
    .home_wrapper
      .home_intro_wrapper
        .home_intro= home.data.intro_title
        .home_intro_skills= home.data.intro_skills
        .line_bottom
      .home_works
        .home_works_wrapper
          .home_works_title
            .home_works_title_icon
            h1.home_works_title_h1 Selected Works

          .home_works_list
            .home_works_list_wrapper
              each work in projects
                  .home_works_single
                    figure.home_works_single_thumbnail
                      img.home_works_single_image(src=work.data.featured_image.url alt=work.data.featured_image.alt)
                    .home_works_single_details
                      .home_works_single_skills=work.data.skills
                    h2.home_works_single_title=work.data.title
                    .home_works_single_button
                      a.home_works_single_link(a href=`/work/${work.uid}`) View more
                      .home_works_single_button_icon
                  .home_works_single_line

        include ../components/contact

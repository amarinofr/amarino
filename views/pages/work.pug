extends ../base.pug

block variables
  - var template = 'work'

block content
  .work
    .work_wrapper
      .work_intro
        .work_intro_wrapper
          h2.work_intro_title=single.data.title
          .work_intro_skills=single.data.skills
          .line_bottom
            .line_thick
            .line_thin

      .work_details
        .work_details_wrapper
          .work_details_left
            .work_details_left_top
              .work_details_title
                .work_details_icon
                  svg(width="88" height="48" viewBox="0 0 88 48" fill="none" xmlns="http://www.w3.org/2000/svg")
                    circle(cx="24" cy="24" r="23.5")
                    circle(cx="31.579" cy="24" r="23.5")
                    circle(cx="40.4211" cy="24" r="23.5")
                    circle(cx="47.3166" cy="24" r="23.5")
                    circle(cx="54.8956" cy="24" r="23.5")
                    circle(cx="63.7377" cy="24" r="23.5")
                span Project Description
              .work_details_text!=ctx.prismicH.asHTML(single.data.description)
            .work_details_bottom
              .work_details_live
                | See it live at
                br
                a.work_details_live_link.prevent(href='http://'+single.data.link target='blank')=single.data.link
              .work_details_technical
                .work_details_bottom_techincal_title Technical Stuff
                !=ctx.prismicH.asHTML(single.data.technical_stuff)
          .work_details_right
            figure.work_details_photo
              img.work_details.image(data-src=single.data.featured_image.url alt=single.data.featured_image.alt)

        .work_content
          .work_content_wrapper
            .work_content_solution
              h2.work_content_solution_title The Usual Suspects
              .work_content_suspects
                .work_content_suspects_problem
                  .work_content_suspects_problem_title_wrapper
                    .work_content_suspects_problem_title Problem
                  .work_content_suspects_problem_text!= ctx.prismicH.asHTML(single.data.problem)
                .work_content_suspects_solution
                  .work_content_suspects_solution_title_wrapper
                    .work_content_suspects_solution_title Solution
                  .work_content_suspects_solution_text!= ctx.prismicH.asHTML(single.data.solution)

            .work_content_featured
              .work_content_featured_wrapper
                .work_content_featured_text=single.data.featured_text
                .work_content_featured_images
                  each image in single.data.auxiliar_images
                    figure.work_content_featured_images_photo
                      img.work_content_featured_images_image(data-src=image.image.url alt=image.image.alt)

            if single.data.ui_and_color_palette
              .work_content_ui
                .work_content_ui_wrapper
                  .work_content_ui_icon
                    .work_content_ui_icon_svg
                      svg(width="48" height="45" viewBox="0 0 48 45" fill="none" xmlns="http://www.w3.org/2000/svg")
                        circle(cx="13.9636" cy="30.5457" r="13.3386" stroke="#74706C" stroke-width="1.25")
                        circle(cx="34.0364" cy="30.5457" r="13.3386" stroke="#74706C" stroke-width="1.25")
                        circle(cx="24.4364" cy="13.9636" r="13.3386" stroke="#74706C" stroke-width="1.25")
                    .work_content_ui_title UI & Color Palette

                  figure.work_content_ui_photo
                    img.work_content_ui_image(data-src=single.data.ui_and_color_palette.url alt=single.data.ui_and_color_palette.alt)

            .work_content_screenshots
              .work_content_screenshots_wrapper
                .work_content_screenshots_icon
                  .work_content_screenshots_icon_svg
                      //- svg(width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg")
                      //-   rect(x="0.5" y="11.9282" width="35.5716" height="35.5716" rx="2.5")
                      //-   rect(x="4.30951" y="8.11914" width="35.5716" height="35.5716" rx="2.5")
                      //-   rect(x="8.11908" y="4.30908" width="35.5716" height="35.5716" rx="2.5")
                      //-   rect(x="11.9286" y="0.5" width="35.5716" height="35.5716" rx="2.5")
                  .work_content_screenshots_title Some Screenshots
                .work_content_screenshots_list
                  each screenshot in single.data.screenshots
                    figure.work_content_screenshots_list_item
                      img.work_content_screenshots_list_image(data-src=screenshot.image.url alt=screenshot.image.alt)

            .work_content_next_project
              .work_content_next_project_wrapper
                .work_content_next_project_button
                  .work_content_next_project_icon
                    svg(width="89" height="67" viewBox="0 0 89 67" fill="none" xmlns="http://www.w3.org/2000/svg")
                      circle(cx="33.1176" cy="33.1176" r="32.4926" stroke-width="1.25")
                      circle(cx="43.5759" cy="33.1176" r="32.4926" stroke-width="1.25")
                      circle(cx="55.7772" cy="33.1176" r="32.4926" stroke-width="1.25")

                  .work_content_next_project_link
                    a(href=`/work/${single.data.next_project.uid}`) Next project
